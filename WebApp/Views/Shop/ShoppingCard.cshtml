@using Gat.Core.Entity
@model List<Product>
@{
    ViewData["Title"] = "ShoppingCard";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="shoping-cart spad">
    <div class="container">
        @if (ViewBag.PurchaseSuccess != null && ViewBag.PurchaseSuccess)
        {
            <div class="alert alert-success" role="alert">
                Sepetiniz Onaylandı, Ürünler Satın Alındı!
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Ürünler</th>
                                <th>Fiyat</th>
                                @*<th>Adet</th>*@
                                @*<th>Toplam</th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count>0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="@item.ProductImage" style="max-width: 20%" alt="">
                                            <h5>@item.ProductName.Substring(0, Math.Min(41, @item.ProductName.Length))..</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.Price ₺
                                        </td>
                                       @* <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="text" value="1">
                                                </div>
                                            </div>
                                        </td>*@
                                        @*<td class="shoping__cart__total">
                                            @item.Price ₺
                                        </td>*@
                                        <td class="shoping__cart__item__close">
                                            <form method="post" asp-controller="Shop" asp-action="RemoveFromCart">
                                                <input type="hidden" name="Id" value="@item.Id" />
                                                <button style="border:none;" type="submit"><span class="icon_close"></span></button>
                                            </form>                                                                                                                                    
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                       
                                        <h5>Sepetiniz Boş....</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                       
                                    </td>
                                    <td class="shoping__cart__quantity">
                                       
                                    </td>
                                    <td class="shoping__cart__total">
                                       
                                    </td>
                                    <td class="shoping__cart__item__close">
                                      
                                    </td>
                                </tr>
                            }
                           
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="/Shop/Index/" class="primary-btn cart-btn">Alışverişe Devam Et</a>                    
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Sepet Tutarı</h5>
                    <ul>                        
                        <li>Toplam Tutar <span>@ViewBag.Total ₺</span></li>
                    </ul>
                    <a href="/Shop/ProductBuy/" class="primary-btn">Sepeti Onayla</a>
                </div>
            </div>
        </div>
    </div>
</section>

