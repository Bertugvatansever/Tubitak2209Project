
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Ürünler</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="shoping__cart__item">
                                    <img src="~/ogani-master/img/cart/cart-1.jpg" alt="">
                                    <h5>Sebze Paketi</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    55.00TL
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty">
                                            <input type="text" value="2">
                                        </div>
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    110.00TL
                                </td>
                                <td class="shoping__cart__item__close">
                                    <span class="icon_close"></span>
                                </td>
                            </tr>
                            <tr>
                                <td class="shoping__cart__item">
                                    <img src="~/ogani-master/img/cart/cart-2.jpg" alt="">
                                    <h5>Taze Bahçe Meyveleri</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    39.00TL
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty">
                                            <input type="text" value="1">
                                        </div>
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    39.99TL
                                </td>
                                <td class="shoping__cart__item__close">
                                    <span class="icon_close"></span>
                                </td>
                            </tr>
                            <tr>
                                <td class="shoping__cart__item">
                                    <img src="~/ogani-master/img/cart/cart-3.jpg" alt="">
                                    <h5>Organik Muz</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    69.00TL
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty">
                                            <input type="text" value="1">
                                        </div>
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    69.00TL
                                </td>
                                <td class="shoping__cart__item__close">
                                    <span class="icon_close"></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">Alışverişe Devam Et</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Sepeti Güncelle
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>İndirim Kuponu</h5>
                        <form action="#">
                            <input type="text" placeholder="Kodu Giriniz">
                            <button type="submit" class="site-btn">Kuponu Uygula</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Sepet Tutarı</h5>
                    <ul>
                        <li>Ara Tutar <span>$454.98</span></li>
                        <li>Toplam Tutar <span>$454.98</span></li>
                    </ul>
                    <a href="/CheckOut/Index/" class="primary-btn">Sepeti Onayla</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->

